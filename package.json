{
  "name": "plaet-api",
  "version": "1.0.0",
  "description": "Plaet API para administraci√≥n y contabilidad de restaurantes. ",
  "main": "src/server.ts",
  "scripts": {
    "start": "npx prisma migrate deploy && node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "TEST_TYPE=integration jest",
    "test:e2e": "TEST_TYPE=e2e jest",
    "test:all": "npm test && TEST_TYPE=integration npm test && TEST_TYPE=e2e npm test",
    "test:db:start": "bash scripts/test-db-setup.sh start",
    "test:db:stop": "bash scripts/test-db-setup.sh stop",
    "test:db:reset": "bash scripts/test-db-setup.sh reset",
    "test:db:migrate": "bash scripts/test-db-setup.sh migrate",
    "test:db:status": "bash scripts/test-db-setup.sh status",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "postinstall": "prisma generate || true",
    "eslint-check-only": "npx eslint .",
    "eslint-fix": "npx eslint . --fix",
    "prettier": "npx prettier --write ."
  },
  "keywords": [
    "api",
    "plaet",
    "backend",
    "management",
    "restaurant"
  ],
  "author": "NgCraftz",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@faker-js/faker": "^10.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^7.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
